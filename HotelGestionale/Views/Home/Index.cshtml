@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-2 text-white fw-bold">Hotel Qualunque</h1>
    <p class="text-white fs-4">Vivi un'esperienza da sogno</p>

    <div id="carouselExample" class="carousel slide borderCarusel">
        <div class="carousel-inner shadow-lg ">
            
            <div class="carousel-item active">
                <img src="/img/lobby.webp" class="d-block w-100 asp39 " alt="...">
            </div>
            <div class="carousel-item">
                <img src="/img/room1.jpeg" class="d-block w-100 asp39 " alt="...">
            </div>
            <div class="carousel-item">
                <img src="/img/room2.webp" class="d-block w-100 asp39 " alt="...">
            </div>
            <div class="carousel-item">
                <img src="/img/pool.webp" class="d-block w-100 asp39 " alt="...">
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
</div>
